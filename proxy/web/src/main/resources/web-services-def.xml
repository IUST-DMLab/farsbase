<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
            http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:annotation-config/>
    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

    <bean id="validationProvider" class="org.apache.cxf.validation.BeanValidationProvider"/>
    <bean id="beanValidationInInterceptor" class="org.apache.cxf.jaxrs.validation.JAXRSBeanValidationInInterceptor">
        <property name="provider" ref="validationProvider"/>
    </bean>
    <bean id="beanValidationOutInterceptor" class="org.apache.cxf.jaxrs.validation.JAXRSBeanValidationOutInterceptor">
        <property name="provider" ref="validationProvider"/>
    </bean>
    <bean id="commonValidationFeature" class="org.apache.cxf.validation.BeanValidationFeature">
        <property name="provider" ref="validationProvider"/>
    </bean>

    <bean id="helloService" class="ir.ac.iust.dml.kg.knowledge.proxy.web.services.hello.HelloServiceImpl"/>
    <bean id="userService" class="ir.ac.iust.dml.kg.knowledge.proxy.web.services.v1.UserServiceImpl"/>
    <bean id="profileService" class="ir.ac.iust.dml.kg.knowledge.proxy.web.services.v1.ProfileServiceImpl"/>
    <bean id="forwardService" class="ir.ac.iust.dml.kg.knowledge.proxy.web.services.v1.ForwardServiceImpl"/>

    <jaxws:endpoint implementor="#helloService" address="/ws/v0"/>
    <jaxws:endpoint implementor="#userService" address="/ws/v1/users"/>
    <jaxws:endpoint implementor="#profileService" address="/ws/v1/profile"/>
    <jaxws:endpoint implementor="#forwardService" address="/ws/v1/forwards"/>
    <jaxrs:server id="jaxRsServer" address="/rs">
        <jaxrs:serviceBeans>
            <ref bean="helloService"/>
            <ref bean="userService"/>
            <ref bean="profileService"/>
            <ref bean="forwardService"/>
        </jaxrs:serviceBeans>

        <jaxrs:features>
            <bean class="org.apache.cxf.jaxrs.swagger.Swagger2Feature"/>
        </jaxrs:features>
        <jaxrs:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>
            <bean class="ir.ac.iust.dml.kg.knowledge.commons.JAXRSExceptionMapper"/>
        </jaxrs:providers>
        <jaxrs:inInterceptors>
            <ref bean="beanValidationInInterceptor"/>
        </jaxrs:inInterceptors>
        <jaxrs:outInterceptors>
            <ref bean="beanValidationOutInterceptor"/>
        </jaxrs:outInterceptors>
    </jaxrs:server>

</beans>